	</style>
	 <style name="clean_button_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_clean</item>
</style>
     
 <style name="device_link_animation" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/current_enter_from_down</item>  <!--  打开activity，设置activity进入展示动画  -->
        <item name="android:activityOpenExitAnimation">@anim/last_exit_from_down</item>  <!--  打开activity，设置上个activity离开动画  -->
        <item name="android:activityCloseEnterAnimation">@anim/last_enter_from_up</item>  <!--  结束activity，设置上个activity进入动画  -->
        <item name="android:activityCloseExitAnimation">@anim/current_exit_from_up</item>  <!--  结束activity，设置当前activity离开动画  -->
    </style>
    
 	<style name="device_link_activity_theme">
        <item name="android:windowAnimationStyle">@style/device_link_animation</item>        
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>	 

 	<style name="device_search_animation" parent="android:Animation">
        <item name="android:activityOpenEnterAnimation">@anim/current_enter_from_right</item>  <!--  打开activity，设置activity进入展示动画  -->
        <item name="android:activityOpenExitAnimation">@anim/last_exit_from_right</item>  <!--  打开activity，设置上个activity离开动画  -->
        <item name="android:activityCloseEnterAnimation">@anim/last_enter_from_left</item>  <!--  结束activity，设置上个activity进入动画  -->
        <item name="android:activityCloseExitAnimation">@anim/current_exit_from_left</item>  <!--  结束activity，设置当前activity离开动画  -->
    </style> 	
 	
 	<style name="device_search_activity_theme">
        <item name="android:windowAnimationStyle">@style/device_search_animation</item>        
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>		 
	 
	<style name="dialog_show_animation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/current_enter_from_down</item>  <!--  打开activity，设置activity进入展示动画  -->
        <item name="android:windowExitAnimation">@anim/current_exit_from_up</item>  <!--  结束activity，设置当前activity离开动画  -->
    </style> 	
 	
