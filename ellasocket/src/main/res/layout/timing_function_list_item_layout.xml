<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ll_timingfunction_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/search_list_item_height"
        android:layout_marginLeft="@dimen/system_padding_left"
        android:layout_marginRight="@dimen/system_padding_left"
        android:layout_marginTop="@dimen/system_padding_left"
        android:background="@drawable/y335_bg_list"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/timing_function_list_item_left"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_time"
                style="@style/text_style_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_info"
                style="@style/text_style_black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/timing_function_list_item_summy_textsize" />
        </LinearLayout>
        <ImageButton
            android:id="@+id/ib_timing_function"
            style="@style/toggle_button_style" 
        android:background="@drawable/button_toggle_off"
        	android:contentDescription="=@string/app_name"/>
        <!-- <ToggleButton
            android:id="@+id/tb_timingfunction"
            style="@style/toggle_button_style"
            android:layout_marginTop="@dimen/timing_function_list_item_right"
            android:layout_marginRight="@dimen/timing_function_list_item_right" /> -->
    </LinearLayout>

</LinearLayout>