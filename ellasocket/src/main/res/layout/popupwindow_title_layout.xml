<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_popupwindow_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_popupwindow_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popupwindow_title_height"
        android:layout_marginLeft="@dimen/popupwindow_title_left"
        android:gravity="center_vertical"
        android:textColor="@color/popup_dialog_title_textcolor"
        android:textSize="@dimen/normal_textsize" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/y335_bg_title_blue" />

</LinearLayout>