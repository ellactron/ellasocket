<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_gas_quality_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="@dimen/history_electricity_width"
        android:layout_height="@dimen/history_electricity_height"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/y335_bg_history_electricity"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_electricity_alone"
            style="@style/text_style_white"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:drawableLeft="@drawable/y335_button_electricity_analyse"
            android:drawablePadding="5dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/popupwindow_editText_left"
            android:text="@string/analyse_one" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/y335_bg_popupwindow"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/popupwindow_editText_left"
            android:paddingRight="@dimen/popupwindow_editText_left" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:paddingTop="@dimen/popupwindow_editText_left" 
                android:paddingBottom="@dimen/popupwindow_editText_left" >

                <TextView
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/y335_power_consumption_icon"
                    android:drawablePadding="5dp"
                    android:text="@string/power_consumption" />

                <TextView
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/socket_electricity_unit_kw" />

                <TextView
                    android:id="@+id/textView4"
                    style="@style/power_consumption_number_text_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"/>
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y335_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_title_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y335_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_title_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y335_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_title_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView3"
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/y335_line"
                android:contentDescription="@string/app_name" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/popupwindow_title_height"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView5"
                    style="@style/power_consumption_text_style_black"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_popupwindow_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_popupwindow_close"
        android:contentDescription="@string/app_name" >
    </ImageButton>

</FrameLayout>