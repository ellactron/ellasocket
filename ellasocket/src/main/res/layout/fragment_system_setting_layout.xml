        -->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/y335_line"
            android:contentDescription="@string/app_name"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:orientation="horizontal" 
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/system_setting_item_image_right"
                android:src="@drawable/y335_system_setting_aboutme" 
                />

            <Button
                android:id="@+id/btn_setting_aboutme"
                style="@style/system_setting_item_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/about_us" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/y335_line"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_setting_modify_password"
                style="@style/system_setting_item_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/y335_system_setting_modify_password"
                android:drawablePadding="@dimen/system_setting_item_image_right"
                android:text="@string/modify_password" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/y335_line"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/system_setting_item_height"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_setting_login_out"
                style="@style/system_setting_item_button_style"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableLeft="@drawable/y335_system_setting_logout"
                android:drawablePadding="@dimen/system_setting_item_image_right"
                android:text="@string/save_exit" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/y335_line"
            android:contentDescription="@string/app_name" />
    </LinearLayout>

</LinearLayout>